#!/bin/sh

B_CYAN='\033[1;36m'
CYAN='\033[0;36m'
NC='\033[0m'
RED='\033[0;31m'
YELLOW='\033[0;33m'

echo ""
echo "${B_CYAN}Conventional Commit Cheatsheet${NC}"
echo ""
echo "${B_CYAN}STRUCTURE${NC}"
echo "  ${RED}<type>${YELLOW}[optional scope]${RED}: <description>${NC}"
echo ""
echo "  ${YELLOW}[optional body]${NC}"
echo ""
echo "  ${YELLOW}[optional footer(s)]${NC}"
echo ""
echo "${B_CYAN}TYPES${NC}"
echo "  build, chore, ci, docs, feat, fix, perf, refactor, style, test"
echo ""
echo "${B_CYAN}EXAMPLES${NC}"
echo "  - ${CYAN}Commit message with no body${NC}"
echo "    ${RED}docs: add install instructions to README${NC}"
echo ""
echo "  - ${CYAN}Commit message with scope${NC}"
echo "    ${RED}feat(search): add filter capability${NC}"
echo ""
echo "  - ${CYAN}Breaking change commit message with both '!' and optional footer${NC}"
echo "    ${RED}refactor!: drop support for Node 11 and lower${NC}"
echo ""
echo "    ${YELLOW}BREAKING CHANGE: using features introduced in Node 12${NC}"
